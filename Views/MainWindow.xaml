<Window x:Class="PSamples.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="500" Width="525"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Label Content="システム日時"></Label>
            <Label Content="{Binding SystemDateLabel}"></Label>
            <Button Content="システム日時更新"
                    Command="{Binding SystemDateUpdateBtn}"></Button>
            <Button Content="show view A"
                    Command="{Binding ShowViewABtn}"></Button>
            <Button Content="show view A パラメータあり"
                    Command="{Binding ShowViewPBtn}"></Button>
            <Button Content="show view B"
                    Command="{Binding ShowViewBBtn}"></Button>
            <Button Content="show view C : ListBox"
                    Command="{Binding ShowViewCBtn}"></Button>
            <ContentControl prism:RegionManager.RegionName="ContentRegion" />
        </StackPanel>
    </Grid>
</Window>
